#include<string.h>
#include<conio.h>
#include<stdio.h>
main()
{
    char str[100];
    int i;
    int lower=0,special=0;;
    printf("Please enter the string \n");
    gets(str);
    
    for(i=0;i<strlen(str);i++)
    {
	
    if(str[i]>='a' && str[i]<='z') { 
               lower++;
    }

    else{
        special++;
    }
    
}
    printf("\nLower case letters: %d",lower);
    printf("\nSpecial characters: %d",special);
    
}
